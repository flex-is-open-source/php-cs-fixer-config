{
    "name": "flexis/php-cs-fixer-config",
    "description": "Provides common configurations for friendsofphp/php-cs-fixer, used within FLEX-IS",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Martin Miskovic",
            "email": "miskovic.martin@gmail.com"
        }
    ],
    "config": {
        "sort-packages": true,
        "classmap-authoritative": true,
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    },
    "require": {
        "php": "^8.1",
        "friendsofphp/php-cs-fixer": "^3.14"
    },
    "require-dev": {
        "phpstan/extension-installer": "^1.2",
        "phpstan/phpstan": "^1.10",
        "phpstan/phpstan-deprecation-rules": "^1.1",
        "phpstan/phpstan-strict-rules": "^1.5",
        "phpunit/php-code-coverage": "^10.0",
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "Flexis\\PhpCsFixer\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests"
        }
    },
    "scripts": {
        "post-install-cmd": "mkdir -p ./var/tmp/cache",
        "analyse": "phpstan analyse",
        "cs-list": "php-cs-fixer fix --dry-run",
        "cs-fix": "php-cs-fixer fix",
        "test": "phpunit"
    },
    "scripts-descriptions": {
        "analyse": "Analyse code with static code analyser",
        "cs-list": "List coding standard violations",
        "cs-fix": "Fixes coding standards",
        "test": "Runs automated tests"
    }
}