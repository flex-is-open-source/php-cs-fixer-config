{
    "name": "flexis/php-cs-fixer-config",
    "description": "Configuration for php coding standards fixer",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": "~8.1",
        "friendsofphp/php-cs-fixer": "^3.9",
        "phpstan/extension-installer": "^1.2",
        "phpstan/phpstan": "^1.8",
        "phpstan/phpstan-strict-rules": "^1.4",
        "phpunit/php-code-coverage": "^9.2",
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "Flexis\\PhpCsFixer\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests"
        }
    },
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "classmap-authoritative": true,
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    },
    "scripts-descriptions": {
        "_format": "Fixes coding standards",
        "_init_dir": "Creates necessary directory structure"
    },
    "scripts": {
        "_format": [
            "php-cs-fixer fix"
        ],
        "_init_dir": [
            "mkdir -p ./var/tmp/cache"
        ]
    }
}
